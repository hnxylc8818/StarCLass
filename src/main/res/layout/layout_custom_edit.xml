<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cedit_root"
    android:background="@drawable/selector_cedit_bg"
    android:padding="10dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cedit_label"
        android:text="用户名"
        android:labelFor="@+id/cedit_et"
        android:textColor="@color/text_color"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:textSize="@dimen/font_18"
        android:layout_width="@dimen/cedit_label_width"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cedit_bt"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:src="@mipmap/eye_visiable"
        android:maxWidth="@dimen/cedit_bt_width"
        android:layout_alignTop="@id/cedit_label"
        android:layout_alignBottom="@id/cedit_label"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@id/cedit_et"
        android:textColor="@color/text_color"
        android:layout_toRightOf="@id/cedit_label"
        android:layout_toLeftOf="@id/cedit_bt"
        android:textSize="@dimen/font_18"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>