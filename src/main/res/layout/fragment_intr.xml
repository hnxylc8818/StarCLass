<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="讲师介绍"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_intr_photo"
                android:layout_width="@dimen/lesson_info_intr_photo"
                android:layout_height="@dimen/lesson_info_intr_photo"
                android:layout_marginLeft="70dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/fragment_intr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20sp"
                android:text="讲师："
                android:textColor="@color/text_color"
                android:textSize="@dimen/font_18" />

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_intr_teac_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="hahsasdhashahshahha"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="课程介绍"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_18" />

        <TextView
            android:id="@+id/fragment_intr_lesson_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="hahsasdhashahshahha"
            android:textColor="@color/text_color"
            android:textSize="@dimen/font_18" />

    </LinearLayout>
</ScrollView>